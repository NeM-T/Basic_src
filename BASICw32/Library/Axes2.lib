EXTERNAL PICTURE AXES2(sx,sy)
ASK WINDOW L,R,B,T
ASK LINE STYLE S
SET LINE STYLE 1
ASK LINE COLOR C
SET LINE COLOR 15  ! Silver
ASK TEXT COLOR TC
SET TEXT COLOR 15
ASK TEXT HEIGHT th
SET TEXT HEIGHT 0.02*(T-B)
ASK TEXT JUSTIFY ts1$,ts2$
SET TEXT JUSTIFY "RIGHT","TOP"
ASK DEVICE SIZE PX,PY,S$
LET DX=(R-L)/PX*2
LET DY=(T-B)/PY*2
PLOT LINES: L,0;R,0
FOR X=CEIL(L/sx)*sx TO INT(R/sx)*sx STEP sx
   PLOT LINES :X,-DY;X,DY
   DRAW label(str$(x)) WITH SCALE ((R-L)/(T-B),1) * SHIFT(x,0)
NEXT X
PLOT LINES:0,B;0,T
FOR Y=CEIL(B/sy)*sy TO INT(T/sy)*sy STEP sy
   PLOT LINES: -DX,Y;DX,Y
   DRAW label(str$(y)) WITH SCALE ((R-L)/(T-B),1) * SHIFT(0,y)
NEXT Y
SET LINE COLOR C
SET LINE STYLE S
SET TEXT COLOR TC
SET TEXT JUSTIFY ts1$,ts2$
PICTURE label(s$)
   PLOT TEXT ,AT 0,0: s$
END PICTURE
END PICTURE
