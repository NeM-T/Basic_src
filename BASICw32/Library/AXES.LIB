! If you want to change the picture AXES,
! modify this and murge it in your program.
EXTERNAL PICTURE AXES
ASK WINDOW L,R,B,T
ASK LINE STYLE S
SET LINE STYLE 1
ASK LINE COLOR C
SET LINE COLOR 15  ! silver
ASK TEXT COLOR tc
SET TEXT COLOR 15
ASK PIXEL SIZE(L,B;R,T) PX,PY
LET DX=(R-L)/PX*2
LET DY=(T-B)/PY*2
SET TEXT HEIGHT DY*6
PLOT LINES: L,0;R,0
FOR X=CEIL(L) TO INT(R)
   PLOT LINES :X,-DY;X,DY
   PLOT TEXT, AT x,0:STR$(x)
NEXT X
PLOT LINES:0,B;0,T
FOR Y=CEIL(B) TO INT(T)
   PLOT LINES: -DX,Y;DX,Y
   PLOT TEXT,AT 0,y:str$(y)
NEXT Y
SET LINE COLOR C
SET LINE STYLE S
SET TEXT COLOR tc
END PICTURE
