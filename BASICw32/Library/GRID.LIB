EXTERNAL PICTURE GRID
DECLARE NUMERIC L,R,B,T,LS,LC,tc,ta,th,x,y
ASK WINDOW L,R,B,T
ASK LINE STYLE LS
SET LINE STYLE 3
ASK LINE COLOR LC
SET LINE COLOR 15
ASK TEXT COLOR tc
SET TEXT COLOR 15
ASK TEXT ANGLE ta
SET TEXT ANGLE 0
ASK TEXT HEIGHT th
SET TEXT HEIGHT (T-B)*0.04
FOR X=CEIL(L) TO INT(R)
   PLOT LINES:X,B;X,T
   PLOT TEXT, AT x,0:str$(x)
NEXT X
FOR Y=CEIL(B) TO INT(T)
   PLOT LINES:L,Y;R,Y
   PLOT TEXT, AT 0,y:STR$(y)
NEXT Y
SET LINE STYLE 1
PLOT LINES:L,0;R,0
PLOT LINES:0,B;0,T
SET LINE COLOR LC
SET LINE STYLE LS
SET TEXT COLOR tc
SET TEXT ANGLE ta
SET TEXT HEIGHT th
END PICTURE

