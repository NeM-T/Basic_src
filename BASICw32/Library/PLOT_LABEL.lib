 EXTERNAL PICTURE PLOT_LABEL(x,y,s$)
 DECLARE NUMERIC M(4,4),MM(4,4)
 DECLARE NUMERIC u(4),v(4)
 DECLARE NUMERIC l,r,b,t
 ASK WINDOW l,r,b,t
 MAT M=TRANSFORM
 LET u(1)=x
 LET u(2)=y
 LET u(3)=0
 LET u(4)=1
 MAT v=u*M
 LET p=v(1)/v(4)
 LET q=v(2)/v(4)
 MAT MM=INV(M)
 DRAW TEXT WITH scale((r-l)/(t-b),1)*shift(p,q) *MM
 PICTURE TEXT
    PLOT TEXT,AT 0,0:s$
 END PICTURE
 END PICTURE
