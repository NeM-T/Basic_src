EXTERNAL FUNCTION LOG(x)
IF x<=0 THEN
   CAUSE EXCEPTION 3004
ELSEIF x<1 THEN
   LET log=-log(1/x)
ELSEIF x>3 THEN
   LET log=2*log(SQR(x))
ELSE         ! 1<=x<=3
   LET h=(x-1)/(x+1)   ! 0<=h<=0.5
   LET t=0
   LET n=1
   LET k=h
   LET h2=H^2
   DO 
      LET t=t+k/n
      LET n=n+2
      LET k=k*h2
   LOOP UNTIL k<=eps(0)
   LET log=2*t
END IF
END FUNCTION

 

 
 
