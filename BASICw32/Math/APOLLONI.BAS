100 ! 2点A(-3,0),B(3,0)からの距離の比がAP:BP=2:1であるような点をさがす。
105 ! マウスの左ボタンを押すと終了
110 SET WINDOW -10,10,-10,10
120 DRAW AXES
130 PLOT POINTS:-3,0
140 PLOT TEXT ,AT-3,0: "A"
150 PLOT POINTS:3,0
160 PLOT TEXT ,AT 3,0: "B"
170 DO 
180    MOUSE POLL x,y,L,R
190    LET AP=SQR((x+3)^2+y^2)
200    LET BP=SQR((X-3)^2+Y^2)
210    IF BP=0 OR AP/BP>2 THEN
220       SET POINT COLOR 3
230    ELSEIF AP/BP<2 THEN 
240       SET POINT COLOR 4
250    ELSE 
260       SET POINT COLOR 7
270    END IF
280    PLOT POINTS:x,y
290 LOOP UNTIL L<>0
300 END
