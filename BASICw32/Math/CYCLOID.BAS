DECLARE EXTERNAL PICTURE circle0
SET WINDOW -1,9,-5,5
FOR s=-2 TO 10 STEP PI/60
   SET DRAW MODE HIDDEN    ! `rʂɔfȂ
   CLEAR
   DRAW AXES 
   DRAW circle0 WITH ROTATE(-s)*SHIFT(s,1)
   SET LINE COLOR 2
   FOR t=-2 TO s STEP PI/60
      LET x=t-SIN(t)
      LET y=1-COS(t)
      PLOT LINES:x,y;
   NEXT t
   SET DRAW MODE EXPLICIT  ! `挋ʂʂɔf
   WAIT DELAY 0.02         ! 0.02bCx~
NEXT s
END

EXTERNAL PICTURE circle0
